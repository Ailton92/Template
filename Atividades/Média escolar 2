Média escolar 2:

Algoritmo "semnome"

Var

nota1: real
nota2: real
trabalho: real
media: real
status: caractere
Inicio

   escreval ("Qual foi sua 1ª nota?")
   leia (nota1)
   escreval (" ")

   escreval ("Qual foi sua 2ª nota?")
   leia (nota2)
   escreval (" ")

   escreval ("E sua nota do trabalho?")
   leia (trabalho)
   escreval (" ")

media <- (nota1 + nota2+ trabalho)/ 3

SE (media < 5) ENTAO
   status <- " I (insuficiente)"
SENAO
  SE (media < 7) ENTAO
        status <- " R (regular)"
    SENAO
      SE (media < 9) ENTAO
           status <- " B (bom)"
      SENAO
        status <- " MB (muito bom"
      FIMSE
    FIMSE
   FIMSE
  escreval ("Média:", media)
  escreval ("Status:", status)
Fimalgoritmo
