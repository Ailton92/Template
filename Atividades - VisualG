Nome, sobrenome e ano de nascimento:

Algoritmo "semnome"

Var

   nome: caractere
   sobrenome: caractere
   idade: inteiro
   ano_nascimento: inteiro
   ano_atual: inteiro
Inicio
 
  ESCREVAL ("Digite seu nome: ")
  LEIA (nome)
  ESCREVAL (" ")
  ESCREVAL ("Digite seu sobrenome: ")
  LEIA (sobrenome)
  ESCREVAL (" ")
  ESCREVAL ("Quantos anos você tem?")
  LEIA (idade)
  ESCREVAL (" ")
  ESCREVAL ("Qual o ano atual?")
  LEIA (ano_atual)
  ESCREVAL (" ")
  ano_nascimento <- ano_atual - idade
  ESCREVAL ("Então você é ", nome, " ", sobrenome, ", nascido em", ano_nascimento, "?")


Fimalgoritmo
==============================================================================================================================
Calculadora de soma:

Algoritmo "semnome"

Var
 
   num1: inteiro
   num2: inteiro
   soma: inteiro
Inicio
 
  ESCREVAL ("Digite o 1° número:")
  LEIA (num1)
  ESCREVAL (" ")
  ESCREVAL ("Digite o 2° número:")
  LEIA (num2)
  ESCREVAL (" ")
  soma <- num1 + num2
  ESCREVAL (" ")
  ESCREVAL (" O resultado é ", soma)


