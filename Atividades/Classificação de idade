   escreval ("Qual sua idade?")
   leia (idade)
   escreval (" ")

SE (idade < 13) ENTAO
   status <- " CrianÃ§a"
SENAO
  SE (idade < 18) ENTAO
        status <- " Adolescente"
    SENAO
